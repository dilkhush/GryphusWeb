<!DOCTYPE html>
<html>
  <head>
    <title>Prototipo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    -->
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <% if current_user %>
      Usuario con el email: <strong><%= current_user.email %></strong>
      <%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to 'Salir', destroy_user_session_path, method: :delete %> <br>
      <%= yield %>
    <% else %>
      <%= link_to 'Crear Cuenta', new_user_registration_path, :class => 'navbar-link' %> <br>
      <%= link_to 'Iniciar SesiÃ³n', new_user_session_path, :class => 'navbar-link' %> <br>
      <% if controller.controller_name == 'sessions' || controller.controller_name == 'registrations' %>
        <%= yield %>
      <% end %>
      <% if controller.controller_name == 'home' %>
        <%= yield %>
      <% end %>
    <% end %>
  </body>
</html>
